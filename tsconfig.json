{
    "compilerOptions": {
        "allowJs": true,
        "module": "CommonJS",
        "outDir": "dist",
        "rootDir": "src",
        "esModuleInterop": true,
        "sourceMap": true,
        "target": "ES2020",
        "strict": true,
        "typeRoots": [
            "./src/@types", 
            "./node_modules/@types"
        ]
    },
    "include": ["src/**/*"],    
    "exclude": ["node_modules"]
}